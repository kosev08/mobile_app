<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0f2230"
    tools:context=".presentation.view.CreateListActivity">
    <LinearLayout
        android:id="@+id/card_info_list_detail"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:id="@+id/name_detail_List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="18dp"
            android:textSize="20dp"
            android:text="Name"/>
        <TextView
            android:id="@+id/item_favourites_detail_List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="2dp"
            android:textSize="18dp"
            android:text="Like"
            android:textColor="#E42424"/>
        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginHorizontal="2dp"
            android:textSize="22dp"
            android:text="/"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/item_detail_List"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="2dp"
            android:textSize="18dp"
            android:text="All"/>

        <TextView
            android:textColor="@color/white"
            android:id="@+id/detail_List_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="70dp"
            android:textSize="18dp"
            android:text="Clear"/>


        <ImageView
            android:src="@drawable/ic_delete_forever_24"
            android:id="@+id/detail_List_delete"
            android:layout_marginLeft="10dp"
            android:layout_gravity=""
            android:layout_marginVertical="5dp"
            android:layout_width="30dp"
            android:layout_height="35dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/card_info_list_detail"
        android:layout_margin="10dp"
        android:id="@+id/list_detail_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>